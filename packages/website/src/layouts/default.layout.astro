---
import { type Props as BaseLayoutProps, default as BaseLayout } from './base.layout.astro';

export type Props = BaseLayoutProps & { observeScroll?: boolean };

const { lang, observeScroll, pageTitle, siteTitle } = Astro.props;
---

<BaseLayout lang={lang} siteTitle={siteTitle} pageTitle={pageTitle}>
  <style is:global slot="head">
    kvlm-navigation {
      position: fixed;
      inset: 0 0 auto;
      z-index: 2;
    }
  </style>

  <slot name="head" slot="head" />
  <kvlm-layout>
    <slot name="header" />
    <kvlm-main scroll-observe-selector={observeScroll ? 'kvlm-section' : undefined}>
      <slot />
    </kvlm-main>
  </kvlm-layout>
</BaseLayout>
