{
  "name": "@kvlm/website",
  "description": "kvlm.de website",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "David Enke",
    "email": "david@kvlm.de"
  },
  "type": "module",
  "scripts": {
    "sync:decap": "adc -t ./src/collections -n %%name%%.schema.ts ./src/collections/*.collection.yml",
    "sync:astro": "astro sync",
    "sync": "cross-env FORCE_COLOR=1 run-s -lns sync:*",
    "dev:proxy": "cross-env PORT=4320 GIT_REPO_DIRECTORY=../../ netlify-cms-proxy-server",
    "dev:sync": "run-s \"sync:decap -w\"",
    "dev:start": "astro dev --host",
    "dev": "cross-env FORCE_COLOR=1 run-p -lns dev:*",
    "build:sync": "run-s sync:decap",
    "build:build": "astro build",
    "build": "cross-env FORCE_COLOR=1 run-s -lns build:*"
  },
  "dependencies": {
    "@kvlm/ui": "workspace:*",
    "decap-cms-app": "3.4.0",
    "decap-cms-lib-widgets": "3.1.0",
    "decap-cms-widget-list": "3.2.2",
    "marked": "15.0.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-redux": "9.1.2"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/mdx": "3.1.9",
    "@astrojs/netlify": "6.0.0",
    "@astrojs/react": "4.0.0",
    "@astropub/md": "1.0.0",
    "@types/node": "22.10.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.3.4",
    "astro": "4.16.17",
    "astro-decap-collection": "0.2.1",
    "cross-env": "7.0.3",
    "decap-cms-core": "3.5.0",
    "immutable": "5.0.3",
    "netlify-cms-proxy-server": "1.3.24",
    "npm-run-all": "4.1.5",
    "shx": "0.3.4",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vite-plugin-static-copy": "2.2.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.28.1"
  }
}
