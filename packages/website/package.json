{
  "name": "@kvlm/website",
  "description": "kvlm.de website",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "David Enke",
    "email": "david@kvlm.de"
  },
  "type": "module",
  "scripts": {
    "dev:proxy": "cross-env PORT=4320 GIT_REPO_DIRECTORY=../../ netlify-cms-proxy-server",
    "dev:start": "astro dev --host",
    "dev": "run-p -lns dev:*",
    "build:clean": "shx rm -rf public/ui",
    "build:copy": "shx cp -r node_modules/@kvlm/ui/dist public/ui",
    "build:build": "astro build",
    "build": "run-s -lns build:*"
  },
  "dependencies": {
    "@kvlm/ui": "workspace:*",
    "decap-cms": "3.3.3"
  },
  "devDependencies": {
    "@astrojs/mdx": "3.1.8",
    "@astrojs/netlify": "5.5.3",
    "@types/node": "20.16.10",
    "astro": "4.16.2",
    "cross-env": "7.0.3",
    "netlify-cms-proxy-server": "1.3.24",
    "npm-run-all": "4.1.5",
    "shx": "0.3.4",
    "typescript": "5.6.3"
  }
}
