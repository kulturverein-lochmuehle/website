{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "useDefineForClassFields": false,
    "verbatimModuleSyntax": true
  }
}
