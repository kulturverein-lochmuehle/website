{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "lib": ["es2017", "dom", "dom.iterable"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "exclude": [],
  "include": ["src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "es2022"
    }
  }
}
