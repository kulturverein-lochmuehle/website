{
  "name": "@kvlm/website",
  "description": "kvlm.de website",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "David Enke",
    "email": "david@kvlm.de"
  },
  "type": "module",
  "scripts": {
    "sync:decap": "adc -c ./public/admin/config.yml -t ./src/content",
    "sync:astro": "astro sync",
    "sync": "run-s -lns sync:*",
    "dev:proxy": "cross-env PORT=4320 GIT_REPO_DIRECTORY=../../ netlify-cms-proxy-server",
    "dev:start": "astro dev --host",
    "dev:sync": "adc -c ./public/admin/config.yml -t ./src/content -w",
    "dev": "run-p -lns dev:*",
    "build:clean": "shx rm -rf public/ui",
    "build:copy": "shx cp -r node_modules/@kvlm/ui/dist public/ui",
    "build:sync": "run-s sync:decap",
    "build:build": "astro build",
    "build": "run-s -lns build:*"
  },
  "dependencies": {
    "@kvlm/ui": "workspace:*",
    "decap-cms-app": "3.3.3",
    "lit": "3.2.1",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/lit": "4.3.0",
    "@astrojs/mdx": "3.1.8",
    "@astrojs/netlify": "5.5.3",
    "@astrojs/react": "3.6.2",
    "@types/node": "20.16.10",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "astro": "4.16.2",
    "astro-decap-collection": "0.1.3",
    "cross-env": "7.0.3",
    "decap-cms-core": "3.4.2",
    "netlify-cms-proxy-server": "1.3.24",
    "npm-run-all": "4.1.5",
    "shx": "0.3.4",
    "tsx": "4.19.1",
    "typescript": "5.6.3"
  }
}
