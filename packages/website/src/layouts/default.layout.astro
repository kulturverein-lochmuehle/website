---
import { type Props as BaseLayoutProps, default as BaseLayout } from './base.layout.astro';

export type Props = BaseLayoutProps;

const { lang, pageTitle, siteTitle } = Astro.props;
---

<BaseLayout lang={lang} siteTitle={siteTitle} pageTitle={pageTitle}>
  <slot name="head" slot="head" />
  <kvlm-layout>
    <slot name="header" />
    <kvlm-main scroll-observe-selector="kvlm-section">
      <slot />
    </kvlm-main>
  </kvlm-layout>
</BaseLayout>
